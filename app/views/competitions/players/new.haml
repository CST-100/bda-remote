%nav
  %ul
    %li= link_to 'Home', home_path
    %li= link_to 'Competitions', competitions_path
    %li= link_to @competition.name, competition_path(@competition)
%h1 Add NPC
= form_for @player, url: competition_players_path(@competition) do |f|
  %ul
    %li
      %label= f.label :name
      = f.text_field :name
    %li
      %label= f.label :craft
      = f.file_field :craft
    %li= f.submit 'Add NPC'
