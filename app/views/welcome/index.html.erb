<h1>BDA Scores API</h1>
<h2>Competitions</h2>
<h3>/competitions.json</h3>
<ul>
<% @competition_ids.each do |e| %>
<li><%= link_to e, competition_records_path(e, format: :json) %></li>
<% end %> 
</ul>

<h2>Records</h2>
<h3>/competitions/:competition_id/records.json</h3>

<h1>Longest Hits - Top 10</h1>
<ul>
<% @longest_hit.each do |r| -%>
<% next if r.distance.nil? -%>
<li><%= r.distance %>m with <%= r.weapon %> by <%= r.player %></li>
<% end -%>
</ul>

