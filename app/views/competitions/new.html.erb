<nav>
<ul>
<li><%= link_to 'Home', root_path %></li>
<li><%= link_to 'Competitions', competitions_path %></li>
</ul>
</nav>

<h1>New Competition</h1>
<%= link_to 'Fork Existing', template_competitions_path %>

<% if flash[:error] -%>
<p class="error"><%= flash[:error] %></p>
<% end -%>
<%= form_for Competition.new do |f| -%>
<ul>
<li>
<%= f.label :name %>
<%= f.text_field :name %>
</li>
<li>
<%= f.label :ruleset_id, 'Ruleset' %>
<%= f.select :ruleset_id, options_for_select(@rulesets.map { |e| [e.name, e.id] }), include_blank: true %>
</li>
</ul>
<%= f.submit 'Create Competition' -%>
<% end -%>

