- content_for(:html_title) { "Edit Vessel" }

- content_for(:nav) do
  %ul.list-unstyled
    %li= link_to 'Home', home_path
    %li= link_to 'Vessel Hangar', player_vessels_path(@player)

- content_for(:sidebar) do
  %h4 Actions
  %ul.list-unstyled
    %li= link_to 'Cancel', player_vessel_path(@player, @vessel)

%section
  %h1 Edit Vessel
  - if flash[:error]
    %ul.errors
    - flash[:error].each do |e|
      %li= e
  = form_for [@player, @vessel] do |f|
    = f.label :name
    = f.text_field :name
    = f.submit 'Submit'

