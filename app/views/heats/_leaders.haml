%section
  %h1 Leaderboard
  %table
    %tr
      %th Rank
      %th Player
      %th Score
      %th Kills
      %th Deaths
      %th Assists
      %th Hits Out
      %th Dmg Out
      %th Missile Dmg Out
      %th Missile Parts Out
      %th Ram Parts Out
      %th Hits In
      %th Dmg In
      %th Missile Dmg In
      %th Missile Parts In
      %th Ram Parts In
    - heat.leaders.each_with_index do |p, k|
      %tr
        %td= k+1
        %td= p.vessel.player.name
        %td= p[:score]
        %td= p[:kills]
        %td= p[:deaths]
        %td= p[:assists]
        %td= p[:hits_out]
        %td= p[:dmg_out]
        %td= p[:mis_dmg_out]
        %td= p[:mis_parts_out]
        %td= p[:ram_parts_out]
        %td= p[:hits_in]
        %td= p[:dmg_in]
        %td= p[:mis_dmg_in]
        %td= p[:mis_parts_in]
        %td= p[:ram_parts_in]
